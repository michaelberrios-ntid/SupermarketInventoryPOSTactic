{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "POS.SyncService": "Information",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Sync": {
    "StoreId": "STORE001",
    "CentralApiEndpoint": "http://store_api:8080/api/inventory/events",
    "HealthCheckEndpoint": "http://store_api:8080/health",
    "MaxRetryAttempts": 3,
    "RetryDelayMinutes": 5,
    "SyncIntervalSeconds": 10,
    "BatchSize": 50,
    "HttpTimeoutSeconds": 30,
    "EnableDetailedLogging": false,
    "CleanupIntervalHours": 24,
    "DataRetentionDays": 30,
    "AutoCreateDatabase": true,
    "LocalDatabaseConnectionString": "Data Source=/app/data/POS_Local.db",
    "ApiHeaders": {},
    "EnableTransactionSync": true,
    "EnableInventorySync": true,
    "MaxTransactionAgeDays": 7,
    "EnableHealthChecks": true,
    "HealthCheckIntervalMinutes": 5
  },
  "Kafka": {
    "BootstrapServers": "kafka:9092",
    "InventoryTopic": "inventory-events",
    "Enabled": true,
    "ProducerConfig": {
      "client.id": "pos-sync-service",
      "acks": "1",
      "retries": "3",
      "retry.backoff.ms": "1000"
    }
  },
  "Database": {
    "ConnectionString": "Data Source=/app/data/POS_Local.db",
    "EnableDetailedLogging": false,
    "CommandTimeoutSeconds": 30,
    "AutoMigrate": true,
    "EnableConnectionPooling": true,
    "MaxPoolSize": 10
  }
}
